 <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/Content/assets/style.css" />
</head>
<body>
    <div class="container">
        <div class="top-section">
            <div class="top-left">
                <div class="logo">
                    <h2><span class="logo-top">LOGO</span></h2>
                </div>
                <button id="menu_bar">
                    <span class="material-symbols-sharp">menu</span>
                </button>
            </div>
            <div class="top-middle">
                <h2>Products</h2>
            </div>
            <div class="top-right">
                <div class="profile-name">
                    <h4>Kuddus</h4>
                    <p>admin</p>
                </div>
                <div class="profile-picture">
                    <img src="https://buffer.com/library/content/images/size/w1200/2023/10/free-images.jpg" alt="">
                </div>
            </div>
        </div>
        <div class="body-section">
            <div class="aside">
                <div class="close" id="close_btn">
                    <button id="close_btn">
                        <span class="material-symbols-sharp">close</span>
                    </button>
                </div>
                <div class="slidebar">
                    <a href="#">
                        <span class="material-symbols-sharp">grid_view</span>
                        <h3>Dashboard</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">person_outline</span>
                        <h3>Custumers</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">insights</span>
                        <h3>Analysis</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">mail_outline</span>
                        <h3>Messeages</h3>
                        <span class="message_count">9</span>
                    </a>
                    <a href="#" class="active">
                        <span class="material-symbols-sharp">receipt_long</span>
                        <h3>Products</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">report_gmailerrorred</span>
                        <h3>Reports</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">settings</span>
                        <h3>Settings</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">add</span>
                        <h3>Add product</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">logout</span>
                        <h3>Log out</h3>
                    </a>
                </div>
            </div>
            @RenderBody()
            
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script>
        const sideMenu = document.querySelector('.aside');
        const menuBtn = document.querySelector('#menu_bar');
        const closeBtn = document.querySelector('#close_btn');
        const body = document.querySelector('.main-section');
        menuBtn.addEventListener('click',()=>{
            sideMenu.style.display ="block";
            body.style.display = "none";
        })
        closeBtn.addEventListener('click',()=>{
            sideMenu.style.display ="none";
            body.style.display = "block";
        })
    </script>
</body>
</html>
